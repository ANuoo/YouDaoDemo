<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="200dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <ImageView
        android:id="@+id/img_course_endless"
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/img_course_endless"/>

    <TextView
        android:id="@+id/txt_course_endless_title"
        android:layout_width="wrap_content"
        android:layout_below="@id/img_course_endless"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txt_course_endless_mark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_course_endless_title"
        android:background="@drawable/background_course_endless_marktitle"
        android:textColor="#ffffff"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/txt_course_endless_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txt_course_endless_mark_title"
        android:layout_below="@id/txt_course_endless_title"
        android:layout_marginStart="8dp"
        android:maxLines="1"/>

</RelativeLayout>