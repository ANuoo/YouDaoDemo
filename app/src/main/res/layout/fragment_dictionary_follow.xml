<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_dictionary_follow"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorBackgroundDictionaryFollow" />

        <TextView
            android:id="@+id/txt_dictionary_follow_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/txt_dictionary_follow_top"
            android:textColor="@color/colorDictionaryFollowTopTitle"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_dictionary_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_dictionary_follow"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">


        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>
</ScrollView>
