<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_dictionary_follow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/img_dictionary_follow"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_dictionary_follow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/img_dictionary_follow"
        android:textColor="@color/colorDictionaryRecommendTitle"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_dictionary_follow_title_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_dictionary_follow_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/img_dictionary_follow"
        android:maxEms="10"
        android:singleLine="true"
        android:textColor="@color/colorDictionaryRecommendTitle"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_dictionary_follow_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_dictionary_follow_title_mark"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/img_dictionary_follow"
        android:textColor="@color/colorDictionaryRecommendMark"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txt_dictionary_follow_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@id/img_dictionary_follow"
        android:background="@drawable/background_dictionary_follow_mark"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="@string/txt_dictionary_follow_mark"
        android:textColor="@color/colorDictionaryFollowMark"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/img_dictionary_follow"
        android:layout_marginTop="5dp"
        android:background="@color/colorExploreLine" />

</RelativeLayout>

