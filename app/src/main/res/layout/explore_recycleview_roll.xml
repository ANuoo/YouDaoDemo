<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="150dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_explore_roll_item"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:background="@drawable/background_explore_roll"
        android:contentDescription="@string/img_explore_roll_item"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_explore_roll_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="2"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_explore_roll_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textColor="@color/colorExploreWordSign" />

</LinearLayout>