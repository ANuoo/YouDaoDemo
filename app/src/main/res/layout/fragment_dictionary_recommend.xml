<ScrollView android:id="@+id/scroll_dictionary_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/frame_dictionary_today"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_dictionary_recommend_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_dictionary_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycle_dictionary_recommend_today"
                android:layout_marginTop="10dp">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

</ScrollView>


