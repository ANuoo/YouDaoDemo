<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/txt_dictionary_recommend_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/colorDictionaryRecommendTitle" />

    <ImageView
        android:id="@+id/img_dictionary_recommend_picture_ad"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="@string/img_dictionary_recommend_picture_ad"
        android:layout_below="@id/txt_dictionary_recommend_ad_title"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txt_dictionary_recommend_ad_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_dictionary_recommend_picture_ad"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:textColor="@color/colorDictionaryRecommendMark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/txt_dictionary_recommend_ad_mark"
        android:layout_marginTop="4dp"
        android:background="@color/colorExploreLine" />

</RelativeLayout>