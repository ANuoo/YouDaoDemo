<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/img_explore_item"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/background_explore_icon"
        android:padding="0.8dp"
        android:contentDescription="@string/img_explore_item"/>

    <TextView
        android:id="@+id/txt_explore_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_explore_item"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:textSize="17sp"
        android:textColor="#000000"/>

</RelativeLayout>