<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/txt_explore"
        android:textColor="#000000"
        android:textSize="24sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_explore_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_explore"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorExploreLine"
        android:layout_below="@id/recycle_explore_roll"
        android:layout_marginTop="9dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_explore"
        android:layout_marginStart="10dp"
        android:layout_marginTop="210dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>